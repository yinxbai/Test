<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yq.mapper.TeacherMapper">
    <resultMap id="findTeacherMap" type="teacher">
        <id column="id" property="id"></id>
        <result column="account" property="account"></result>
        <result column="password" property="password"></result>
        <result column="name" property="name"></result>
        <result column="role" property="role"></result>
        <association property="clazz" column="clazz_id" javaType="clazz">
            <id column="cid" property="id"></id>
            <result column="cname" property="name"></result>
        </association>
    </resultMap>
    <select id="findTeacherByAccountAndPassword" parameterType="teacher" resultMap="findTeacherMap">
        select a.*,b.id cid,b.name cname from teacher a,clazz b where a.clazz_id = b.id and account=#{account} and password=#{password}
    </select>
    <update id="changePassword" parameterType="teacher">
        update teacher set password=#{password} where id=#{id}
    </update>

    <select id="findAll" resultMap="findTeacherMap">
        select a.*,b.id cid,b.name cname from teacher a,clazz b where a.clazz_id = b.id
    </select>

    <select id="findCount" resultType="int" parameterType="string">
        select count(*) from teacher where clazz_id=#{clazzId}
    </select>

    <delete id="deleteById" parameterType="String">
        delete from teacher where id = #{id}
    </delete>

    <update id="update" parameterType="teacher">
        update teacher set account=#{account},name=#{name},clazz_id=#{clazz.id},role=#{role} where ID =#{id}
    </update>

    <insert id="save" parameterType="teacher">
        insert into teacher values(#{id},#{account},#{password},#{name},#{clazz.id},#{role})
    </insert>
</mapper>