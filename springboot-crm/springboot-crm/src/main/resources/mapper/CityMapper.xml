<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jad.mapper.CityMapper">

    <select id="findAll" resultType="city">
        select * from city
    </select>

    <select id="findCityById" parameterType="String" resultType="city">
        select * from city where id=#{id}
    </select>

    <select id="findCityByName" parameterType="String" resultType="city">
        select * from city where name=#{name}
    </select>

    <insert id="save" parameterType="city">
        insert into city values(#{id},#{name})
    </insert>

    <delete id="deleteById" parameterType="String">
        delete from city where id = #{id}
    </delete>

    <update id="update" parameterType="city">
        update city set NAME=#{name} where ID =#{id}
    </update>


</mapper>