<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xy.springcloud.dao.DeptDao">

    <resultMap id="deptMapper" type="com.xy.springcloud.pojo.Dept">
        <id column="dept_no" property="id" />
        <result column="dept_name" property="deptName" />
        <result column="db_source" property="dbSource" />
    </resultMap>

    <insert id="addDept" >
        insert into dept(dept_name,db_source)
        values (#{deptName},DATABASE())
    </insert>
    <select id="queryById" resultMap="deptMapper">
        select * from dept
        where dept_No = #{id}
    </select>
    <select id="queryAll" resultMap="deptMapper">
        select * from dept
    </select>

</mapper>