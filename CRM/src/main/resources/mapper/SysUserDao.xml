<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ll.crm.dao.SysUserDao">

    <resultMap type="com.ll.crm.entity.SysUser" id="SysUserMap">
        <result property="id" column="ID" jdbcType="VARCHAR"/>
        <result property="account" column="ACCOUNT" jdbcType="VARCHAR"/>
        <result property="password" column="PASSWORD" jdbcType="VARCHAR"/>
        <result property="name" column="NAME" jdbcType="VARCHAR"/>
        <result property="photo" column="PHOTO" jdbcType="VARCHAR"/>
        <result property="role" column="ROLE" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="SysUserMap">
        select ID,
               ACCOUNT,
               PASSWORD,
               NAME,
               PHOTO,
               ROLE
        from crm.sys_user
        where ID = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="SysUserMap">
        select ID,
               ACCOUNT,
               PASSWORD,
               NAME,
               PHOTO,
               ROLE
        from crm.sys_user limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="SysUserMap">
        select
        ID, ACCOUNT, PASSWORD, NAME, PHOTO, ROLE
        from crm.sys_user
        <where>
            <if test="id != null and id != ''">
                and ID = #{id}
            </if>
            <if test="account != null and account != ''">
                and ACCOUNT = #{account}
            </if>
            <if test="password != null and password != ''">
                and PASSWORD = #{password}
            </if>
            <if test="name != null and name != ''">
                and NAME = #{name}
            </if>
            <if test="photo != null and photo != ''">
                and PHOTO = #{photo}
            </if>
            <if test="role != null and role != ''">
                and ROLE = #{role}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" parameterType="com.ll.crm.entity.SysUser">
        insert into sys_user(id,account,password,`name`,photo,`role`) values (#{id}, #{account}, #{password}, #{name}, #{photo}, #{role})
    </insert>

    <insert id="insertBatch" keyProperty="id" useGeneratedKeys="true">
        insert into crm.sys_user(ACCOUNT, PASSWORD, NAME, PHOTO, ROLE)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.account}, #{entity.password}, #{entity.name}, #{entity.photo}, #{entity.role})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="id" useGeneratedKeys="true">
        insert into crm.sys_user(ACCOUNT, PASSWORD, NAME, PHOTO, ROLE)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.account}, #{entity.password}, #{entity.name}, #{entity.photo}, #{entity.role})
        </foreach>
        on duplicate key update
        ACCOUNT = values(ACCOUNT) , PASSWORD = values(PASSWORD) , NAME = values(NAME) , PHOTO = values(PHOTO) , ROLE =
        values(ROLE)
    </insert>

    <!--通过主键修改数据-->
    <update id="update" parameterType="string" >
        update crm.sys_user
        <set>
            <if test="account != null and account != ''">
                ACCOUNT = #{account},
            </if>
            <if test="password != null and password != ''">
                PASSWORD = #{password},
            </if>
            <if test="name != null and name != ''">
                NAME = #{name},
            </if>
            <if test="photo != null and photo != ''">
                PHOTO = #{photo},
            </if>
            <if test="role != null and role != ''">
                ROLE = #{role},
            </if>
        </set>
        where ID = #{id}
    </update>
    <!--通过ID修改密码-->
    <update id="changePassword" parameterType="string">
        update sys_user set password=#{password} where ID=#{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete
        from crm.sys_user
        where ID = #{id}
    </delete>

    <select id="login" parameterType="string" resultType="com.ll.crm.entity.SysUser">
        select * from sys_user where account=#{account} and password=#{password}
    </select>
    <select id="findAll" resultType="com.ll.crm.entity.SysUser">
        select * from sys_user
    </select>

    <select id="queryByName" resultType="com.ll.crm.entity.SysUser">
        select *
        from sys_user where `name` like #{name};
    </select>
</mapper>

