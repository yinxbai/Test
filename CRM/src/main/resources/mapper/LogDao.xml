<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ll.crm.dao.LogDao">

    <resultMap type="com.ll.crm.entity.Log" id="LogMap">
        <result property="id" column="ID" jdbcType="VARCHAR"/>
        <result property="createTime" column="CREATE_TIME" jdbcType="VARCHAR"/>
        <result property="userId" column="USER_ID" jdbcType="VARCHAR"/>
        <result property="ip" column="IP" jdbcType="VARCHAR"/>
        <result property="description" column="DESCRIPTION" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="LogMap">
        select ID,
               CREATE_TIME,
               USER_ID,
               IP,
               DESCRIPTION
        from crm.log
        where ID = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="LogMap">
        select ID,
               CREATE_TIME,
               USER_ID,
               IP,
               DESCRIPTION
        from crm.log limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="LogMap">
        select
        ID, CREATE_TIME, USER_ID, IP, DESCRIPTION
        from crm.log
        <where>
            <if test="id != null and id != ''">
                and ID = #{id}
            </if>
            <if test="createTime != null and createTime != ''">
                and CREATE_TIME = #{createTime}
            </if>
            <if test="userId != null and userId != ''">
                and USER_ID = #{userId}
            </if>
            <if test="ip != null and ip != ''">
                and IP = #{ip}
            </if>
            <if test="description != null and description != ''">
                and DESCRIPTION = #{description}
            </if>
        </where>
    </select>
    <select id="exportExcel" parameterType="string" resultType="com.ll.crm.entity.Log">
        select * from log
    </select>

    <!--新增所有列-->
    <insert id="insert" parameterType="com.ll.crm.entity.Log">
        insert into crm.log(ID,CREATE_TIME, USER_ID, IP, DESCRIPTION)
        values (#{id},#{createTime}, #{userId}, #{ip}, #{description})
    </insert>

    <insert id="insertBatch" keyProperty="id" useGeneratedKeys="true">
        insert into crm.log(CREATE_TIME, USER_ID, IP, DESCRIPTION)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.createTime}, #{entity.userId}, #{entity.ip}, #{entity.description})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="id" useGeneratedKeys="true">
        insert into crm.log(CREATE_TIME, USER_ID, IP, DESCRIPTION)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.createTime}, #{entity.userId}, #{entity.ip}, #{entity.description})
        </foreach>
        on duplicate key update
        CREATE_TIME = values(CREATE_TIME) , USER_ID = values(USER_ID) , IP = values(IP) , DESCRIPTION =
        values(DESCRIPTION)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update crm.log
        <set>
            <if test="createTime != null and createTime != ''">
                CREATE_TIME = #{createTime},
            </if>
            <if test="userId != null and userId != ''">
                USER_ID = #{userId},
            </if>
            <if test="ip != null and ip != ''">
                IP = #{ip},
            </if>
            <if test="description != null and description != ''">
                DESCRIPTION = #{description},
            </if>
        </set>
        where ID = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete
        from crm.log
        where ID = #{id}
    </delete>

</mapper>

